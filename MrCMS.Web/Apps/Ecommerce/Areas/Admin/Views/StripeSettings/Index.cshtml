@using MrCMS.Helpers
@model MrCMS.Web.Apps.Ecommerce.Payment.Stripe.StripeSettings
@{
    ViewBag.Title = "Stripe Settings";
}
@using (Html.BeginForm("Save", "StripeSettings", FormMethod.Post))
{
    <fieldset>
        <legend>
            Stripe Settings
            <span class="btn-group display-inline pull-right">
                <input type="submit" class="btn btn-primary" value="Save" />
            </span>
        </legend>
        <div class="form-group">
            @Html.InlineCheckboxFor(settings => settings.Enabled)
        </div>
        <div class="form-group">
            @Html.LabelFor(settings => settings.Key)
            @Html.TextBoxFor(settings => settings.Key, new { @class = "form-control" })
            @Html.ValidationMessageFor(settings => settings.Key)
        </div>
    </fieldset>
}